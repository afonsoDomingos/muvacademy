# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/muv_academy
# Or use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/muv_academy?retryWrites=true&w=majority

# JWT Secrets
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_REFRESH_SECRET=your_refresh_token_secret_here_change_in_production
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Default Admin Credentials (for seeding)
ADMIN_EMAIL=admin@muvacademy.co.mz
ADMIN_PASSWORD=Admin@123456

# Superadmin Credentials (for seeding)
SUPERADMIN_EMAIL=superadmin@muvacademy.co.mz
SUPERADMIN_PASSWORD=Super@123456
